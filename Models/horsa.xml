  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> 15 </factor>
    <axis>
      <x1-m>   0.488 </x1-m>
      <y1-m> -12.550 </y1-m>
      <z1-m>   0.177 </z1-m>
      <x2-m>   0.268 </x2-m>
      <y2-m>  -6.280 </y2-m>
      <z2-m>   0.000 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor> 15 </factor>
    <axis>
      <x1-m>  0.268 </x1-m>
      <y1-m>  6.280 </y1-m>
      <z1-m>  0.000 </z1-m>
      <x2-m>  0.488 </x2-m>
      <y2-m> 12.550 </y2-m>
      <z2-m>  0.177 </z2-m>
    </axis>
  </animation>

  <!-- Volets -->
  <animation>
    <type>rotate</type>
