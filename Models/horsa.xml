  <!-- Effets sur le sol -->
  <!-- Roue avant -->
  <model>
    <path>Aircraft/Airspeed-Horsa/Models/Effects/ground/ground0.xml</path>
    <offsets>
      <x-m> -8.061 </x-m>
      <y-m>  0.000 </y-m>
