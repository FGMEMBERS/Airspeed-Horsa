  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> 15 </factor>
    <center>
      <x-m> 8.432 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.546 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 20 </factor>
    <axis>
      <x1-m>  8.559 </x1-m>
      <y1-m>  0.000 </y1-m>
      <z1-m> -0.238 </z1-m>
      <x2-m>  8.547 </x2-m>
      <y2-m>  0.000 </y2-m>
      <z2-m>  2.095 </z2-m>
    </axis>
  </animation>

  <!-- Aérofreins -->
  <animation>
    <type>translate</type>
    <object-name>breakG</object-name>
    <property>surface-positions/spoiler-pos-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0.00 </dep></entry>
      <entry><ind> 1 </ind><dep> -0.33 </dep></entry>
    </interpolation>
    <factor> 0.24 </factor>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>breakD</object-name>
    <property>surface-positions/spoiler-pos-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0.00 </dep></entry>
      <entry><ind> 1 </ind><dep> -0.33 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <animation>
    <name>TrainG</name>
    <object-name>roueG</object-name>
    <object-name>axeG1</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainG</object-name>
    <property>/gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.000 </ind><dep>   0 </dep></entry>
      <entry><ind> 0.005 </ind><dep>   8 </dep></entry>
      <entry><ind> 1.000 </ind><dep> -10 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.804 </x-m>
      <y-m> -0.487 </y-m>
      <z-m> -1.858 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>TrainD</name>
    <object-name>roueD</object-name>
    <object-name>axeD1</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainD</object-name>
    <property>/gear/gear[2]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.000 </ind><dep>  0 </dep></entry>
      <entry><ind> 0.005 </ind><dep> -8 </dep></entry>
      <entry><ind> 1.000 </ind><dep> 10 </dep></entry>
    </interpolation>
    <center>
      <x-m> -1.804 </x-m>
      <y-m>  0.487 </y-m>
      <z-m> -1.858 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Rotation de la roue avant en fonction de la gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>roueA</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 20 </factor>
    <center>
      <x-m> -8.073 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -2.681 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  0 </y>
      <z> -1 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueA</object-name>
    <property>gear/gear[0]/tire-rpm</property>
    <center>
      <x-m> -8.073 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -2.681 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[1]/tire-rpm</property>
    <axis>
      <x1-m> -1.413 </x1-m>
      <y1-m> -2.729 </y1-m>
      <z1-m> -2.515 </z1-m>
      <x2-m> -1.413 </x2-m>
      <y2-m> -2.597 </y2-m>
      <z2-m> -2.492 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[2]/tire-rpm</property>
    <axis>
      <x1-m> -1.413 </x1-m>
      <y1-m> -2.597 </y1-m>
      <z1-m> -2.492 </z1-m>
      <x2-m> -1.413 </x2-m>
      <y2-m> -2.729 </y2-m>
      <z2-m> -2.515 </z2-m>
    </axis>
