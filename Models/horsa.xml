    <path>Aircraft/Airspeed-Horsa/Models/Effects/ground/ground1.xml</path>
    <offsets>
      <x-m> -1.400 </x-m>
      <y-m> -2.590 </y-m>
      <z-m> -2.943 </z-m>
    </offsets>
  </model>

  <!-- Roue droite -->
